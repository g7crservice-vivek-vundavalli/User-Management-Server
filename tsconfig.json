{

    //"extends": "./node_modules/ts-node/node16/tsconfig.json",

    "compilerOptions": {

        "experimentalDecorators": true,

        "emitDecoratorMetadata": true,

        "strict": true,

        "module": "CommonJS",

        "target": "ES6",

        "forceConsistentCasingInFileNames": true,

        "baseUrl": ".",

        "paths": {

            "*": [

                "node_modules/*"

            ]

        },

        "esModuleInterop": true,

        "outDir": "dist",

        "moduleResolution": "Node"

    },

    "include": [

        "src/**/*"

    ]

}